{% extends 'base.html.twig' %}

{% block title %}Toutes les recettes{% endblock %}

{% block body %}
<a class="btn btn-primary" href="{{ path('recipe.create')}}">Cr√©er une nouvelle recette</a>
<table class="table">
    <thead>
        <tr>
            <th>Titre</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for recipe in recipes %}
        <tr>
            <td>
                <a href="{{ path('recipe.show', {id: recipe.id, slug: recipe.slug})}}">
                    {{ recipe.title }}
                </a>
            </td>
            <td>
                <div class="d-flex gap-1">
                    <a class="btn btn-primary" href="{{ path('recipe.edit', {id: recipe.id}) }}">Edit</a>
                    <form action="{{ path('recipe.delete', {id: recipe.id}) }}" method="post">
                        <input type="hidden" name="_method" value="DELETE">
                        <button type="submit" class="btn btn-danger">Supprimer</button>
                    </form>
                </div>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}
